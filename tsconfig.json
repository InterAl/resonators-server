    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "./dist/",
    "sourceMap": false,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "noUnusedLocals": false,
    "jsx": "react",
    "lib": ["dom", "es2016"],
    "types": ["mocha", "chai", "node"]
